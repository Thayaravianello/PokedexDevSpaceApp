<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">


    <ImageView
        android:id="@+id/rv_img"
        android:layout_width="154dp"
        android:layout_height="202dp"
        android:background="@color/backgroundPokedexPretoclaro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:gravity="center|bottom"
        android:id="@+id/title_recyv_poke"
        android:paddingBottom="10dp"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:text="@string/namepokemon"
        android:textColor="#F0F0F0"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_img"
        app:layout_constraintEnd_toEndOf="@+id/rv_img"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>